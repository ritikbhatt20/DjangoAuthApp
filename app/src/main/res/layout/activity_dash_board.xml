<?xml version="1.0" encoding="utf-8"?>

<!-- res/layout/dashboard_activity.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/welcomeMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Welcome, John Doe!" />

    <TextView
        android:id="@+id/accessTokenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeMessageTextView"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:text="Access Token: " />

    <!-- Add any other UI components you need for the dashboard -->

</RelativeLayout>

